# ------------------------------------------------------
# pnpm configuration
# ------------------------------------------------------
# Provides deterministic installs and consistent behavior
# across local development and CI environments.
# ------------------------------------------------------

# Enforce lockfile consistency.
# Installation fails if pnpm-lock.yaml is out of sync.
prefer-frozen-lockfile=true

# Use a hoisted node_modules layout for compatibility
# with tools that expect a traditional dependency structure.
node-linker=hoisted

# Prevent implicit dependency exposure via aggressive hoisting.
# Encourages explicit dependency declarations.
shamefully-hoist=false

# Prefer linking local workspace packages when available.
# Enables seamless future monorepo expansion.
link-workspace-packages=true

# Disable automatic execution of preX/postX script wrappers.
# Example: running "pnpm run build" will NOT auto-run prebuild/postbuild.
enable-pre-post-scripts=false
